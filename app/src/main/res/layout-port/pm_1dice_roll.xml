<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                tools:context=".ui.dice.OneDice_Fragment">

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/diceOne"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/d20_blank" />

    </LinearLayout>

    <TextView
            android:id="@+id/Total"
            android:layout_width="236dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/rollDice"
            android:layout_alignParentStart="true"
            android:layout_marginStart="68dp"
            android:layout_marginTop="-150dp"
            android:text="@string/diceRoll_text"
            android:textSize="30sp"
            tools:background="@android:color/white"
            tools:padding="2sp"
            android:textAlignment="center"/>

    <Button
            android:id="@+id/rollDice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="92dp"
            android:text="@string/roll_dice_button"
            android:textSize="20sp" />
</RelativeLayout>