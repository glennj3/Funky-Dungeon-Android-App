<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".OverviewActivity" tools:layout_editor_absoluteY="25dp">
    <EditText
              android:id="@+id/nameEdit"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:inputType="text"
              android:hint="@string/edit_default"
              android:gravity="center_horizontal"/>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_centerHorizontal="true"
            android:layout_above="@id/funky_toolbar"
    >
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">

            <EditText
                      android:id="@+id/defEdit"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="@string/edit_default"/>

        </LinearLayout>
    </ScrollView>
    <android.support.v7.widget.Toolbar
            android:id="@+id/funky_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
    >

    </android.support.v7.widget.Toolbar>


</RelativeLayout>